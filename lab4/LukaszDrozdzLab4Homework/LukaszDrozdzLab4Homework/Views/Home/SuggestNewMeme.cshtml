@model MemeSuggestionViewModel

@{
    ViewData["Title"] = "SuggestNewMeme";
}

<!--Include scripts-->
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
    <script src="~/js/site.js"></script>
</head>

<!--Required by bootstrap-->
<div class="container">

    <!--Present user with short description of the page-->
    <div class="jumbotron page-title">
        <h1>@ViewBag.Description</h1>
    </div>

    <!--Navigation bar-->
    <ul class="nav nav-tabs">
        <li>@Html.ActionLink("Index", "Index")</li>
        <li>@Html.ActionLink("Browse all", "Browse")</li>
        <li>@Html.ActionLink("Search by description", "FindByDesc")</li>
        <li class="active">@Html.ActionLink("Suggest new meme", "SuggestNewMeme")</li>
        <li>@Html.ActionLink("About", "About")</li>
        <li>@Html.ActionLink("Contact", "Contact")</li>
    </ul>

    <!--Suggestion form-->
    @using (Html.BeginForm("SuggestNewMeme"))
    {
        <div class="form-group">

            <!--Image url-->
            <div>
                @Html.LabelFor(model => model.Image, "Image url")
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <!--Email-->
            <div>
                @Html.LabelFor(model => model.AuthorEmail, "Email")
                @Html.EditorFor(model => model.AuthorEmail, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <!--Description-->
            <div>
                @Html.LabelFor(model => model.Description, "Description")
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <!--Title-->
            <div>
                @Html.LabelFor(model => model.Title, "Title")
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <input type="submit" value="Send" class="btn btn-success" />

        </div>
    }

    <!--Display message if needed-->
    @if (ViewBag.Message != null)
    {
        <div class="jumbotron alert-success">
            @ViewBag.Message
        </div>
    }

    <!--Display message if needed-->
    @if (ViewBag.ErrorMessage != null)
    {
        <h2 class="alert-danger">@ViewBag.ErrorMessage</h2>
    }

</div>

