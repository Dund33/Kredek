@model LukaszDrozdzLab5Homework.Models.AnonymousTransactionViewModel

@{
    ViewData["Title"] = "SellCoalAnonymously";
}

<h2>Sprzedaj bez rejestracji</h2>

<!--Form for selling coal without user registration-->

<h4>@ViewBag.CoalName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SellCoalAnonymously">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientFirstName" class="control-label">Imię Klienta</label>
                <input asp-for="ClientFirstName" class="form-control" />
                <span asp-validation-for="ClientFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientLastName" class="control-label">Nazwisko Klienta</label>
                <input asp-for="ClientLastName" class="form-control" />
                <span asp-validation-for="ClientLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PESEL" class="control-label">PESEL</label>
                <input asp-for="PESEL" class="form-control" />
                <span asp-validation-for="PESEL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientAddress" class="control-label">Adres Klienta</label>
                <input asp-for="ClientAddress" class="form-control" />
                <span asp-validation-for="ClientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoalID" class="control-label hidden"></label>
                <input asp-for="CoalID" class="form-control hidden" />
                <span asp-validation-for="CoalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfCoal" class="control-label"></label>
                <input asp-for="AmountOfCoal" class="form-control" />
                <span asp-validation-for="AmountOfCoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentID" class="control-label">Nr faktury</label>
                <input asp-for="DocumentID" class="form-control" />
                <span asp-validation-for="DocumentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sprzedaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<!--Present user with message if needed-->
<div>
    @if (ViewBag.SuccessMessage != null)
    {
        <p class="text-success">@ViewBag.SuccessMessage</p>
    }

    @if(ViewBag.ErrorMessage != null)
    {
        <p class="alert-danger">@ViewBag.ErrorMessage</p>
    }
</div>

<!--Return to coal browsing-->
<div>
    <a asp-action="BrowseCoal">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
