@model LukaszDrozdzLab5Homework.Models.TransactionViewModel

@{
    ViewData["Title"] = "SellCoal";
}

<h2>Sprzedaj</h2>

<!--Present user with form for selling coal-->

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SellCoal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PESEL" class="control-label"></label>
                <input asp-for="PESEL" class="form-control" />
                <span asp-validation-for="PESEL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoalID" class="control-label hidden"></label>
                <input asp-for="CoalID" class="form-control hidden" />
                <span asp-validation-for="CoalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfCoal" class="control-label"></label>
                <input asp-for="AmountOfCoal" class="form-control" />
                <span asp-validation-for="AmountOfCoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentID" class="control-label"></label>
                <input asp-for="DocumentID" class="form-control" />
                <span asp-validation-for="DocumentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


<!--Display success message if needed-->
<div>
    @if (ViewBag.SuccessMessage != null)
    {
    <p class="text-success">@ViewBag.SuccessMessage</p>
    }

    @if (ViewBag.ErrorMessage != null)
    {
    <p class="text-danger">@ViewBag.ErrorMessage</p>
    }
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
