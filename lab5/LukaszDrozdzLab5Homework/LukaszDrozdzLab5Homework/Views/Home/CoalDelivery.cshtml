@model LukaszDrozdzLab5Homework.Models.DeliveryViewModel

@{
    ViewData["Title"] = "CoalDelivery";
}

<h2>Dostawy węgla</h2>

<!--Present user with correct form-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CoalDelivery">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoalID" class="control-label hidden"></label>
                <input asp-for="CoalID" class="form-control hidden" />
                <span asp-validation-for="CoalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfCoal" class="control-label">Ilość węgla[kg]</label>
                <input asp-for="AmountOfCoal" class="form-control" />
                <span asp-validation-for="AmountOfCoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label">Koszt całkowity</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tax" class="control-label">Podatek</label>
                <input asp-for="Tax" class="form-control" />
                <span asp-validation-for="Tax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentID" class="control-label">Nr faktury</label>
                <input asp-for="DocumentID" class="form-control" />
                <span asp-validation-for="DocumentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<!--Display success message if needed-->
<div>
    @if(ViewBag.SuccessMessage != null)
    {
        <p class="text-success">@ViewBag.SuccessMessage</p>
    }
</div>

<!--Return to coal browsing-->
<div>
    <a asp-action="BrowseCoal">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
